<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_margin="4dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        app:cardElevation="2dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardGrey">

        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/donor_body"

                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text="liam, quis nostrud boris odo consequat."
                android:textSize="18dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/donor_body">

                <androidx.appcompat.widget.AppCompatImageView

                    android:id="@+id/donor_call"
                    android:layout_marginTop="8dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignLeft="@id/donor_call"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_toStartOf="@+id/donor_share"
                    android:layout_toLeftOf="@+id/donor_share"
                    android:src="@drawable/ic_call_white_24dp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/donor_share"

                    android:layout_marginTop="8dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_share_white_24dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>