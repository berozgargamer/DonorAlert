<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.activity_make_request"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/head_message"
        android:padding="16dp"
        android:textColor="@color/white"
        android:layout_marginTop="150dp"
        android:textStyle="bold"
        android:text="Our Community will help"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/title_et"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Title"
        android:layout_below="@+id/head_message"
        android:background="@drawable/input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:gravity="left"
        android:id="@+id/request_et"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/title_et"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_field"
        android:hint="Message" />

    <Button
        android:id="@+id/request_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_et"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button"
        android:text="Make Request"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp" />

</RelativeLayout>